@page "/customized"
@inject NavigationManager NavigationManager
@inject PointsService PointsService

<PageTitle>Customize Your Treat</PageTitle>

<div class="page-container">
    <div class="header-wrapper">
        <PageHeader Title="Customize" />
    </div>

    <ChatBubble
        Title="Personalize Your Treat"
        Message="Here are some optional ways to personalize your Sweet Treatâ€”making your birthday uniquely yours! Please make your customizations, then click Next to continue."
        AudioFile="/audio/customization_sweet_treat.mp3" />

    <div class="customization-section">
        <div class="custom-group">
            <label class="custom-label">Child's Name (Optional)</label>
            <input type="text" class="name-input" @bind="childName" placeholder="Enter name here..." />
        </div>

        <div class="custom-group">
            <label class="custom-label">Select Colors (Optional - Up to 3)</label>
            <div class="color-grid">
                @foreach (var color in availableColors)
                {
                    <div class="color-option @(IsColorSelected(color) ? "selected" : "")"
                         @onclick="() => ToggleColor(color)">
                        <div class="color-preview" style="background-color: @GetColorCode(color)"></div>
                        <span class="color-name">@color</span>
                    </div>
                }
            </div>
            @if (selectedColors.Count > 0)
            {
                <div class="selected-colors">
                    Selected: @string.Join(", ", selectedColors)
                </div>
            }
        </div>
    </div>

    @if (showError)
    {
        <div class="error-message">
            You can only select up to 3 colors!
        </div>
    }

    <div class="navigation-buttons">
        <button class="nav-button back-button" @onclick="NavigateBack">
            Back
        </button>
        <button class="nav-button next-button" @onclick="NavigateNext">
            Next
        </button>
    </div>
</div>

@code {
    private string childName = "";
    private List<string> selectedColors = new List<string>();
    private bool showError = false;

    private readonly List<string> availableColors = new List<string>
    {
        "Black", "Brown", "Red", "Yellow", "Purple",
        "Pink", "Green", "White", "Orange", "Blue"
    };

    private void ToggleColor(string color)
    {
        if (selectedColors.Contains(color))
        {
            selectedColors.Remove(color);
            showError = false;
        }
        else if (selectedColors.Count < 3)
        {
            selectedColors.Add(color);
            showError = false;
        }
        else
        {
            showError = true;
        }
    }

    private bool IsColorSelected(string color)
    {
        return selectedColors.Contains(color);
    }

    private string GetColorCode(string colorName)
    {
        return colorName.ToLower() switch
        {
            "black" => "#000000",
            "brown" => "#8B4513",
            "red" => "#FF0000",
            "yellow" => "#FFD700",
            "purple" => "#800080",
            "pink" => "#FFC0CB",
            "green" => "#00FF00",
            "white" => "#FFFFFF",
            "orange" => "#FFA500",
            "blue" => "#0000FF",
            _ => "#808080"
        };
    }

    private void NavigateBack()
    {
        NavigationManager.NavigateTo("/sweet-treats");
    }

    private void NavigateNext()
    {
        // No points deducted for customization
        NavigationManager.NavigateTo("/gifts");
    }
}

